@{
    ViewBag.Title = "Auditorias";
}

@Html.Hidden("FiltroEstado")

<style type="text/css">
    #modalRendicionDetalle .modal-dialog {
        width: 900px !important;
    }
</style>

<div class="row">
    <div class="col-md-8">
        <h2>Auditorias</h2>
    </div>
    <div class="col-md-4" id="divfiltros" style="display:none;">
        <div class="form-group">
            <label class="control-label">Filtrar por estado</label>
            <select size="1" id="Status" name="Status" style="width:100%;">
                <option value="" selected>Todos</option>
                <option value="Pendiente de auditar">Pendiente de auditar</option>
                <option value="Auditoría">Auditoría</option>
                <option value="Pendiente de consiliación">Pendiente de consiliación</option>
                <option value="Consiliación">Consiliación</option>
                <option value="Completado">Completado</option>
            </select>
        </div>
    </div>
</div>
<br />

<table width="100%" id="tbl" class="table table-condensed">
    <thead>
        <tr>
            <th>
                Fecha y Hora
            </th>
            <th>
                Numero
            </th>
            <th>
                Período
            </th>
            <th>
                Clinica
            </th>
            <th>
                Facturas
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@Html.Partial("_CargaExcelAuditorias")

<script src="~/Resources/js/auditorias/index.min.js"></script>
