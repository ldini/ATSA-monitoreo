<script type="text/javascript">
    function CargarExcelAuditorias(cargaId) {
        $("#CargaIdAuditoria").val(cargaId);
        $("#modalCargaExcelAuditorias").modal("show");
    }
</script>

<style type="text/css">
    #modalCargaExcelAuditorias .chosen-container {
        width: 50% !important;
    }
</style>
<div id="modalCargaExcelAuditorias" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:black!important">Cargar Excel Feedback Auditoria</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UploadExcelAuditoria", "Auditorias", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div style="border:1px solid #ccc;border-radius:4px;padding:2px;">
                        <input type="file" accept=".xls" name="files" id="filesAuditoria" />
                        <input type="hidden" id="CargaIdAuditoria" name="CargaIdAuditoria" value="0" />
                        <input type="submit" id="btnSubmitCargaExcelAuditorias" style="display:none" />
                    </div>
                    <span id="ErrorFormExcelAuditoria" style="color:red;display:none;">Debes seleccionar el archivo .xls de auditoría.</span>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" style="float:left;">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnCargarExcelAuditorias" style="float:right;">Cargar</button>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        
        $("#btnCargarExcelAuditorias").on('click', function () {

            var error = false;

            if ($("#filesAuditoria").val() == "") {
                $("#ErrorFormExcelAuditoria").show();
                error = true;
            } else {
                $("#ErrorFormExcelAuditoria").hide();
            }

            if (!error) {
                $('#btnSubmitCargaExcelAuditorias').click();
            }

        });
    });
</script>