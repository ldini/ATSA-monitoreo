@model Natom.ATSA.Monitoreo.Models.ViewModels.MotivoViewModel

<div class="modal fade" id="MotivoModal" tabindex="-1" role="dialog" aria-labelledby="MotivoModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="MotivoModalTitle">@Model.ModalTitle</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="margin-left:20px;margin-right:20px;">
                <div class="form-group">
                    <label>Motivo:</label>
                    <textarea id="TextMotivo" class="form-control"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btnMotivoContinuar" style="margin-top:10px;" class="btn btn-danger">@Model.BtnActionTitle</button>
            </div>
        </div>
    </div>
</div>